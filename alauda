/var/log/nginx/access.log {
  su root root
  copytruncate
  rotate 4
  size 50M
}

/var/log/nginx/error.log {
  su root root
  copytruncate
  rotate 1
  size 25M
}

/var/log/nginx/stream-access.log {
  su root root
  copytruncate
  rotate 4
  size 50M
}

/var/log/nginx/stream-error.log {
  su root root
  copytruncate
  rotate 1
  size 25M
}
